<%- include('./partials/header') %>

<div class="w-full min-h-screen px-20 py-10">
    <h2 class="text-2xl font-semibold mb-8">Customer Feedback</h2>

    <!-- Feedback Form -->
    <div class="bg-white p-6 rounded-lg shadow-md mb-8">
        <h3 class="text-xl mb-4">Share Your Experience</h3>
        <form action="/feedback/submit" method="POST">
            <div class="mb-4">
                <label class="block mb-2">Rating</label>
                <select name="rating" class="w-full p-2 border rounded">
                    <option value="5">⭐⭐⭐⭐⭐ Excellent</option>
                    <option value="4">⭐⭐⭐⭐ Very Good</option>
                    <option value="3">⭐⭐⭐ Good</option>
                    <option value="2">⭐⭐ Fair</option>
                    <option value="1">⭐ Poor</option>
                </select>
            </div>
            <div class="mb-4">
                <label class="block mb-2">Comment</label>
                <textarea name="comment" rows="4" class="w-full p-2 border rounded" required></textarea>
            </div>
            <button type="submit" class="bg-blue-500 text-white px-6 py-2 rounded">Submit Feedback</button>
        </form>
    </div>

    <!-- Feedback List -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% feedbacks.forEach(function(feedback) { %>
            <div class="bg-white p-6 rounded-lg shadow-md">
                <div class="flex items-center mb-4">
                    <span class="font-semibold"><%= feedback.userId.fullname %></span>
                    <span class="ml-2 text-yellow-400">
                        <% for(let i = 0; i < feedback.rating; i++) { %>⭐<% } %>
                    </span>
                </div>
                <p class="text-gray-600"><%= feedback.comment %></p>
                <div class="mt-4 text-sm text-gray-500">
                    <%= new Date(feedback.createdAt).toLocaleDateString() %>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('./partials/footer') %>